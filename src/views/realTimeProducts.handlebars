<script src="/socket.io/socket.io.js"></script>
<script>
const socket = io();

// Elementos del formulario
const form = document.getElementById('productForm');
const container = document.getElementById('productsContainer');
const clearFormBtn = document.getElementById('clearFormBtn');
const cancelEditBtn = document.getElementById('cancelEditBtn');
const productsCount = document.getElementById('productsCount');
const formTitle = document.getElementById('form-title');
const submitText = document.getElementById('submitText');
const editProductIdInput = document.getElementById('editProductId');

// ========================
// SUBMIT FORMULARIO (Crear o Actualizar)
// ========================
form.addEventListener('submit', async (e) => {
  e.preventDefault();

  const editId = editProductIdInput.value;
  
  const productData = {
    title: form.title.value.trim(),
    description: form.description.value.trim(),
    code: form.code.value.trim(),
    price: parseFloat(form.price.value),
    stock: parseInt(form.stock.value),
    category: form.category.value.trim(),
    status: true,
    thumbnails: []
  };

  // Validaciones
  if (productData.price < 0) {
    alert('‚ùå El precio no puede ser negativo');
    return;
  }

  if (productData.stock < 0) {
    alert('‚ùå El stock no puede ser negativo');
    return;
  }

  if (editId) {
    // MODO EDICI√ìN - Usar API REST
    try {
      const response = await fetch(`/api/products/${editId}`, {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(productData)
      });

      if (response.ok) {
        alert('‚úÖ Producto actualizado exitosamente');
        location.reload();
      } else {
        const error = await response.json();
        alert(`‚ùå Error: ${error.message}`);
      }
    } catch (error) {
      alert(`‚ùå Error de conexi√≥n: ${error.message}`);
    }
  } else {
    // MODO CREACI√ìN - Usar WebSocket
    socket.emit('createProduct', productData);
    form.reset();
  }
});

// ========================
// LIMPIAR FORMULARIO
// ========================
clearFormBtn.addEventListener('click', () => {
  form.reset();
  resetFormToCreate();
});

// ========================
// CANCELAR EDICI√ìN
// ========================
cancelEditBtn.addEventListener('click', () => {
  form.reset();
  resetFormToCreate();
});

// ========================
// EDITAR PRODUCTO
// ========================
container.addEventListener('click', (e) => {
  if (e.target.classList.contains('edit-btn') || e.target.closest('.edit-btn')) {
    const btn = e.target.classList.contains('edit-btn') ? e.target : e.target.closest('.edit-btn');
    const id = btn.dataset.id;
    const card = btn.closest('.product-card');
    
    // Obtener datos del producto desde el DOM
    const title = card.querySelector('h3').textContent.trim();
    const price = card.querySelector('.product-price').textContent.replace('$', '').trim();
    const description = card.querySelector('.product-description').textContent.trim();
    const code = card.querySelector('.code-value').textContent.trim();
    const category = card.querySelector('.category-value').textContent.trim();
    const stock = card.querySelector('.stock-value').textContent.trim();
    
    // Cargar datos en el formulario
    form.title.value = title;
    form.description.value = description;
    form.code.value = code;
    form.price.value = price;
    form.stock.value = stock;
    form.category.value = category;
    editProductIdInput.value = id;
    
    // Cambiar UI a modo edici√≥n
    formTitle.textContent = '‚úèÔ∏è Editar Producto';
    submitText.textContent = 'Guardar Cambios';
    cancelEditBtn.style.display = 'inline-flex';
    
    // Scroll al formulario
    form.scrollIntoView({ behavior: 'smooth', block: 'start' });
  }
});

// ========================
// ELIMINAR PRODUCTO
// ========================
container.addEventListener('click', (e) => {
  if (e.target.classList.contains('delete-btn') || e.target.closest('.delete-btn')) {
    const btn = e.target.classList.contains('delete-btn') ? e.target : e.target.closest('.delete-btn');
    const id = btn.dataset.id;
    
    if (confirm('¬øEst√°s seguro de que quieres eliminar este producto?')) {
      socket.emit('deleteProduct', id);
    }
  }
});

// ========================
// RESETEAR FORMULARIO A MODO CREACI√ìN
// ========================
function resetFormToCreate() {
  editProductIdInput.value = '';
  formTitle.textContent = '‚ûï Agregar Nuevo Producto';
  submitText.textContent = 'Agregar Producto';
  cancelEditBtn.style.display = 'none';
}

// ========================
// WEBSOCKET: PRODUCTO CREADO
// ========================
socket.on('productCreated', (product) => {
  const noProducts = container.querySelector('.no-products');
  if (noProducts) {
    noProducts.remove();
  }
  
  const card = document.createElement('div');
  card.classList.add('product-card', 'realtime-card');
  card.setAttribute('data-id', product._id || product.id);
  card.innerHTML = `
    <div class="product-header">
      <h3>${product.title}</h3>
      <span class="product-price">$${product.price}</span>
    </div>
    <p class="product-description">${product.description}</p>
    <div class="product-details">
      <div class="detail-item">
        <span class="detail-label">C√≥digo:</span>
        <span class="detail-value code-value">${product.code}</span>
      </div>
      <div class="detail-item">
        <span class="detail-label">Categor√≠a:</span>
        <span class="detail-value category-value">${product.category}</span>
      </div>
      <div class="detail-item">
        <span class="detail-label">Stock:</span>
        <span class="detail-value stock-value ${product.stock ? 'in-stock' : 'out-of-stock'}">
          ${product.stock}
        </span>
      </div>
      <div class="detail-item">
        <span class="detail-label">Estado:</span>
        <span class="detail-value ${product.status ? 'status-active' : 'status-inactive'}">
          ${product.status ? 'Activo' : 'Inactivo'}
        </span>
      </div>
    </div>
    <div class="product-actions">
      <button class="btn btn-warning edit-btn" data-id="${product._id || product.id}">
        <span class="btn-icon">‚úèÔ∏è</span>
        Editar
      </button>
      <button class="btn btn-danger delete-btn" data-id="${product._id || product.id}">
        <span class="btn-icon">üóëÔ∏è</span>
        Eliminar
      </button>
    </div>
  `;
  
  container.appendChild(card);
  updateProductsCount();
  
  // Animaci√≥n
  card.style.animation = 'slideIn 0.5s ease-out';
});

// ========================
// WEBSOCKET: PRODUCTO ELIMINADO
// ========================
socket.on('productDeleted', (id) => {
  const card = container.querySelector(`[data-id="${id}"]`);
  if (card) {
    card.style.animation = 'slideOut 0.4s ease-in';
    setTimeout(() => {
      card.remove();
      updateProductsCount();
      
      if (container.children.length === 0) {
        container.innerHTML = `
          <div class="no-products">
            <div class="no-products-icon">üì¶</div>
            <h3>No hay productos disponibles</h3>
            <p>Agrega el primer producto usando el formulario superior</p>
          </div>
        `;
      }
    }, 400);
  }
});

// ========================
// WEBSOCKET: ERROR
// ========================
socket.on('error', (error) => {
  alert(`‚ùå Error: ${error.message}`);
});

// ========================
// ACTUALIZAR CONTADOR
// ========================
function updateProductsCount() {
  const productCards = container.querySelectorAll('.product-card');
  productsCount.textContent = productCards.length;
}

// ========================
// ANIMACIONES CSS
// ========================
const style = document.createElement('style');
style.textContent = `
  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes slideOut {
    from {
      opacity: 1;
      transform: translateX(0);
    }
    to {
      opacity: 0;
      transform: translateX(-20px);
    }
  }
`;
document.head.appendChild(style);

// Inicializar contador
updateProductsCount();
</script>
