<div class="realtime-container">
  <h1>‚ö° Administrar productos en tiempo real</h1>

  <!-- Formulario para agregar productos -->
  <div class="form-section">
    <h2 id="form-title">‚ûï Agregar Nuevo Producto</h2>
    <form id="productForm" class="product-form">
      <input type="hidden" id="editProductId" value="">
      
      <div class="form-row">
        <div class="form-group">
          <label for="title">T√≠tulo *</label>
          <input type="text" id="title" name="title" placeholder="Ej: Laptop Gaming" required />
        </div>
        <div class="form-group">
          <label for="description">Descripci√≥n *</label>
          <input type="text" id="description" name="description" placeholder="Ej: Laptop de alta gama para gaming" required />
        </div>
      </div>
      
      <div class="form-row">
        <div class="form-group">
          <label for="code">C√≥digo *</label>
          <input type="text" id="code" name="code" placeholder="Ej: LAP001" required />
        </div>
        <div class="form-group">
          <label for="price">Precio *</label>
          <input type="number" id="price" name="price" placeholder="Ej: 999.99" min="0" step="0.01" required />
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <label for="stock">Stock *</label>
          <input type="number" id="stock" name="stock" placeholder="Ej: 10" min="0" required />
        </div>
        <div class="form-group">
          <label for="category">Categor√≠a *</label>
          <input type="text" id="category" name="category" placeholder="Ej: Tecnolog√≠a" required />
        </div>
      </div>

      <div class="form-actions">
        <button type="submit" class="btn btn-primary" id="submitBtn">
          <span class="btn-icon">‚ûï</span>
          <span id="submitText">Agregar Producto</span>
        </button>
        <button type="button" id="cancelEditBtn" class="btn btn-secondary" style="display: none;">
          <span class="btn-icon">‚úñÔ∏è</span>
          Cancelar Edici√≥n
        </button>
        <button type="button" id="clearFormBtn" class="btn btn-secondary">
          <span class="btn-icon">üóëÔ∏è</span>
          Limpiar Formulario
        </button>
      </div>
    </form>
  </div>

  <!-- Lista de productos en tiempo real -->
  <div class="products-section">
    <h2>üì¶ Productos Existentes</h2>
    <div class="products-stats">
      <span class="stat-item">Total: <strong id="productsCount">{{products.length}}</strong> productos</span>
      <span class="stat-item">En tiempo real: <span class="live-indicator">‚óè</span></span>
    </div>

    <div id="productsContainer" class="products-grid">
      {{#if products.length}}
        {{#each products}}
          <div class="product-card realtime-card" data-id="{{this._id}}">
            <div class="product-header">
              <h3>{{this.title}}</h3>
              <span class="product-price">${{this.price}}</span>
            </div>
            <p class="product-description">{{this.description}}</p>
            <div class="product-details">
              <div class="detail-item">
                <span class="detail-label">C√≥digo:</span>
                <span class="detail-value code-value">{{this.code}}</span>
              </div>
              <div class="detail-item">
                <span class="detail-label">Categor√≠a:</span>
                <span class="detail-value category-value">{{this.category}}</span>
              </div>
              <div class="detail-item">
                <span class="detail-label">Stock:</span>
                <span class="detail-value stock-value {{#if this.stock}}in-stock{{else}}out-of-stock{{/if}}">
                  {{this.stock}}
                </span>
              </div>
              <div class="detail-item">
                <span class="detail-label">Estado:</span>
                <span class="detail-value {{#if this.status}}status-active{{else}}status-inactive{{/if}}">
                  {{#if this.status}}Activo{{else}}Inactivo{{/if}}
                </span>
              </div>
            </div>
            <div class="product-actions">
              <button class="btn btn-warning edit-btn" data-id="{{this._id}}">
                <span class="btn-icon">‚úèÔ∏è</span>
                Editar
              </button>
              <button class="btn btn-danger delete-btn" data-id="{{this._id}}">
                <span class="btn-icon">üóëÔ∏è</span>
                Eliminar
              </button>
            </div>
          </div>
        {{/each}}
      {{else}}
        <div class="no-products">
          <div class="no-products-icon">üì¶</div>
          <h3>No hay productos disponibles</h3>
          <p>Agrega el primer producto usando el formulario superior</p>
        </div>
      {{/if}}
    </div>
  </div>
</div>

