<div class="products-container">
  <h1>{{title}}</h1>

  <!-- Filtros y B√∫squeda -->
  <div class="filters">
    <form method="GET" action="/" class="filter-form">
      <input type="text" name="query" placeholder="Buscar productos..." value="{{query}}">
      <input type="text" name="category" placeholder="Categor√≠a..." value="{{category}}">
      <select name="sort">
        <option value="">Ordenar por...</option>
        <option value="asc" {{#eq sort "asc"}}selected{{/eq}}>Precio: Menor a Mayor</option>
        <option value="desc" {{#eq sort "desc"}}selected{{/eq}}>Precio: Mayor a Menor</option>
      </select>
      <select name="limit">
        <option value="10" {{#eq limit 10}}selected{{/eq}}>10 por p√°gina</option>
        <option value="20" {{#eq limit 20}}selected{{/eq}}>20 por p√°gina</option>
        <option value="50" {{#eq limit 50}}selected{{/eq}}>50 por p√°gina</option>
      </select>
      <button type="submit" class="btn btn-primary">üîç Filtrar</button>
      <a href="/" class="btn btn-secondary">Limpiar</a>
    </form>
  </div>

  <div class="products-grid">
    {{#if payload.length}}
      {{#each payload}}
        <div class="product-card">
          <h3>{{this.title}}</h3>
          <p class="product-description">{{this.description}}</p>
          <p class="product-price">${{this.price}}</p>
          <p class="product-code">C√≥digo: {{this.code}}</p>
          <p class="product-category">Categor√≠a: {{this.category}}</p>
          <p class="product-stock {{#if this.stock}}in-stock{{else}}out-of-stock{{/if}}">
            {{#if this.stock}}
              Stock: {{this.stock}}
            {{else}}
              <span class="out">Sin stock</span>
            {{/if}}
          </p>
          <div class="product-actions">
            <a href="/products/{{this._id}}" class="btn btn-primary">Ver Detalles</a>
            <button class="btn btn-secondary add-to-cart-btn" 
                    data-product-id="{{this._id}}"
                    {{#unless this.stock}}disabled{{/unless}}>
              üõí Agregar
            </button>
          </div>
        </div>
      {{/each}}
    {{else}}
      <div class="no-products">
        <h3>No hay productos disponibles</h3>
        <p>üí° Intenta con otros filtros de b√∫squeda</p>
        {{#if error}}
          <p class="error">Error: {{error}}</p>
        {{/if}}
      </div>
    {{/if}}
  </div>

  <!-- Paginaci√≥n -->
  {{#if payload.length}}
    <div class="pagination">
      {{#if hasPrevPage}}
        <a href="{{prevLink}}" class="btn btn-secondary">‚Üê Anterior</a>
      {{/if}}
      
      <span class="page-info">P√°gina {{page}} de {{totalPages}}</span>
      
      {{#if hasNextPage}}
        <a href="{{nextLink}}" class="btn btn-secondary">Siguiente ‚Üí</a>
      {{/if}}
    </div>
  {{/if}}
</div>

