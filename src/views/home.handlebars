<script>
// Agregar producto al carrito desde la p√°gina principal
document.querySelectorAll('.add-to-cart-btn').forEach(button => {
  button.addEventListener('click', async function() {
    const productId = this.dataset.productId;
    const button = this;
    
    // Mostrar loading
    const originalText = button.innerHTML;
    button.innerHTML = '‚è≥ Agregando...';
    button.disabled = true;
    
    try {
      // Primero necesitamos un carrito - crear uno nuevo si no existe
      let cartId = localStorage.getItem('currentCartId');
      
      if (!cartId) {
        // Crear nuevo carrito
        const response = await fetch('/api/carts', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        });
        
        const result = await response.json();
        cartId = result.payload._id;
        localStorage.setItem('currentCartId', cartId);
      }
      
      // Agregar producto al carrito
      const addResponse = await fetch(`/api/carts/${cartId}/product/${productId}`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        }
      });
      
      if (addResponse.ok) {
        button.innerHTML = '‚úÖ Agregado!';
        setTimeout(() => {
          button.innerHTML = originalText;
          button.disabled = false;
        }, 1500);
      } else {
        const error = await addResponse.json();
        alert('‚ùå Error: ' + error.message);
        button.innerHTML = originalText;
        button.disabled = false;
      }
    } catch (error) {
      alert('‚ùå Error de conexi√≥n: ' + error.message);
      button.innerHTML = originalText;
      button.disabled = false;
    }
  });
});

// Mejorar la experiencia de usuario en los filtros
document.querySelectorAll('.filter-form input, .filter-form select').forEach(element => {
  element.addEventListener('change', function() {
    this.closest('form').submit();
  });
});
</script>